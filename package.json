{
  "name": "node-logger",
  "version": "1.0.3",
  "description": "Banyan runtime logger with output to stdout and files in JSON format",
  "main": "index.js",
  "scripts": {
    "format": "prettier '{.,lib}/**/*.js' --write",
    "lint": "eslint '{.,lib}/**/*.js' --fix",
    "flint": "npm run format && npm run lint",
    "docs": "./node_modules/.bin/jsdoc --configure .jsdocrc.js --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:Vsevolod-Golubinov/node-logger.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run flint",
      "git add ."
    ]
  },
  "dependencies": {
    "async-local-storage": "2.3.1",
    "bunyan": "1.8.15",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-jest-enzyme": "7.1.2",
    "eslint-plugin-jest": "23.9.0",
    "eslint-plugin-jsdoc": "25.4.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "26.6.3",
    "jsdoc": "3.6.4",
    "jsdoc-cli": "1.0.1",
    "jsdoc-route-plugin": "0.1.0",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5"
  },
  "keywords": [
    "logger",
    "json-logger",
    "runtime-logger"
  ],
  "author": "Vsevolod Golubinov",
  "license": "ISC",
  "homepage": "https://bitbucket.org/Vsevolod-Golubinov/node-logger"
}
